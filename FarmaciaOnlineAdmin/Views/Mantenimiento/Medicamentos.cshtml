
@{
    ViewBag.Title = "Medicamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item active">Mantenimiento</li>
    <li class="breadcrumb-item active">Medicamentos</li>
</ol>


<div class="card">
    <div class="card-header">
        <i class="fas fa-pills me-1"></i> Lista de Medicamentos
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abirmodal(null)"> Crear nuevo </button>
            </div>
        </div>
    </div>

    <hr />
    <table id="tablaMarca" class="display cell-borner table table-borderless " style="width:100%">
        <thead>
            <tr>
                <th> Nombre</th>
                <th> Descripcion</th>
                <th> Marca</th>
                <th> Categoria</th>
                <th> Precio</th>
                <th> Stock</th>                
                <th> Receta</th>                
                <th> Activo</th>
                <th></th>
                <th></th>

            </tr>

        </thead>
        <tbody></tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-black text-white">
                <h5 class="modal-title" id="staticBackdropLabel">Medicamentos</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <input id="txtId" type="hidden" value="0" />

                <form class="row" id="contenedor">

                    <div class="col-sm-3">
                        <div class="mb-2">
                            <img id="img_medicamento" height="197" width="200" class="border rounded mx-auto d-block img-fluid" />
                        </div>
                        <div class="mb-2">
                            <input class="form-control" type="file" id="fileMedicamento" accept="image/png, image/jpg" onchange="mostrarImagen(this)" />
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="txtNombre" name="nombre">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descripcion</label>
                            <textarea class="form-control" id="txtDescripcion" style="height:125px;resize:none"></textarea>
                        </div>
                    </div>

                    <!-- Marca + Precio + Stock -->
                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Marca</label>
                            <select id="cboMarca" class="form-select"></select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Precio</label>
                            <input type="text" class="form-control" id="txtPrecio" name="precio" autocomplete="off" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Stock</label>
                            <input type="number" class="form-control" id="txtstock" name="stock" />
                        </div>
                    </div>

                    <!-- Categoria + Receta + Activo -->
                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Categoria</label>
                            <select id="cboCategoria" class="form-select"></select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Receta</label>
                            <select class="form-select" id="cboReceta">
                                <option value="1">Si</option>
                                <option value="0">No</option>
                            </select>
                        </div>                 

                    <div class="mb-3">
                        <label class="form-label">Activo</label>
                        <select class="form-select" id="cboActivo">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                </div>
           </form>

            <!--Mensaje de alerta-->
            <div class="row mt-2">
                <div class="col-12">
                    <div id="mensajeError" class="alert alert-danger" role="alert" style="display:none;">

                    </div>
                </div>
            </div>
        </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>

        var filaseleccionada;
        var tablamarca;


        function mostrarImagen(input) {
            if (input.files) {

                var reader = new FileReader();
                reader.onload = function (e) {
                    $("#img_medicamento").attr("src", e.target.result).width(200)
                        .height(197);
                }

                reader.readAsDataURL(input.files[0]);
            }

        }


        tablamarca = $("#tablaMarca").DataTable({
            Responsesive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarMedicamentos", "Mantenimiento")',
                type: "GET",
                dataType: "json",

            },

            "columns": [

                { "data": "Nombre" },
                { "data": "Descripcion" },
                {
                    "data": "oMarca", "render": function (data) {
                        return data.Descripcion;
                    }
                },
                {
                    "data": "oCategoria", "render": function (data) {
                        return data.Descripcion;
                    }
                },
                { "data": "Precio" },
                { "data": "Stock" },
                { "data": "RequiereReceta",
                    "render": function (valor) {
                        if (valor) {
                            return '<span class="badge bg-success">Si</span>';
                        } else {
                            return '<span class="badge bg-danger">No</span>';
                        }
                    }
                },

                {"data": "Activo",
                    "render": function (valor) {
                        if (valor) {
                            return '<span class="badge bg-success">Si</span>';
                        } else {
                            return '<span class="badge bg-danger">No</span>';
                        }
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fa fa-pen "></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fa fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "90px"
                }
            ],
            "language": {
                "url": "//cdn.datatables.net/plug-ins/2.3.4/i18n/es-ES.json"

            }
            

           
        });

        jQuery.ajax({

            url: '@Url.Action("ListarMarca", "Mantenimiento")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",

            success: function (data) {

                $("<option>").attr({ "value": "0", "disable":"true" }).text("Seleccionar").appendTo("#cboMarca")

                $.each(data.data, function (index, valor) {

                    $("<option>").attr({ "value": valor.MarcaID }).text(valor.Descripcion).appendTo("#cboMarca")

                })
                   
            },
            error: function (error) {
              console.log(data)
            },
        });

        jQuery.ajax({

            url: '@Url.Action("ListarCategoria", "Mantenimiento")',
            type: "GET",
            data: null,
            dataType: "json",
            contentType: "application/json; charset=utf-8",

            success: function (data) {

                $("<option>").attr({ "value": "0", "disable": "true" }).text("Seleccionar").appendTo("#cboCategoria")

                $.each(data.data, function (index, valor) {

                    $("<option>").attr({ "value": valor.CategoriaID }).text(valor.Descripcion).appendTo("#cboCategoria")

                })
            },
            error: function (error) {
              console.log(data)
            },
        });

        //validar precio
        jQuery.validator.addMethod("validarPrecio", function (value, element) {
            return this.optional(element) || /^(\d+)(\.\d{1,2})?$/.test(value);
        }, "Ingrese un precio valido");




        $("#contenedor").validate({
            rules: {
                nombre: {
                    required: true,

                },
                precio: {
                    required: true,
                    validarPrecio: true,

                },
                stock: {
                    required: true,
                    digits: true,
                    min: 0,
                      number: true
                }
            },
            messages: {
                nombre: {
                    required: "El nombre es obligatorio",
                },
                precio: {
                    required: "El precio es obligatorio",
                    validarPrecio: "Ingrese un precio valido"

                },
                stock: {
                    required: "El stock es obligatorio",
                    digits: "Ingrese un valor valido",
                    min: "El stock no puede ser negativo",
                    validarPrecio: "Ingrese solo numeros"
                }
            },
            errorElement: "div",
            errorLabelContainer: ".alert-danger",

        });



        function abirmodal(json) {


            $("#txtId").val(0);
            $("#txtNombre").val("");
            $("#img_medicamento").removeAttr("src");
            $("#txtDescripcion").val("");
            $("#fileMedicamento").val("");
            $("#cboMarca").val($("#cboMarca option:first").val());
            $("#cboCategoria").val($("#cboCategoria option:first").val());
            $("#txtPrecio").val("");
            $("#txtstock").val("");
            $("#cboReceta").val(1);
            $("#cboActivo").val(1);


            $("#mensajeError").hide();

            if (json != null) {
                $("#txtId").val(json.MedicamentoID);
                $("#txtNombre").val(json.Nombre);
                $("#txtDescripcion").val(json.Descripcion);
                $("#cboMarca").val(json.oMarca.MarcaID );
                $("#cboCategoria").val(json.oCategoria.CategoriaID);
                $("#txtPrecio").val(json.Precio);
                $("#txtstock").val(json.Stock);
                $("#cboReceta").val(json.RequiereReceta == true ? 1 : 0);
                $("#cboActivo").val(json.Activo == true ? 1 : 0);

                 jQuery.ajax({
                     url: '@Url.Action("imagenproducto", "Mantenimiento")',
                     type: "POST",
                     data: JSON.stringify({id:json.MedicamentoID}),
                     dataType: "json",
                     contentType: "application/json; charset=utf-8",

                     success: function (data) {
                         if (data.conversion) {
                             $("#img_medicamento").attr({ "src" : "data:image/" + data.extension + ";base64," + data.texto_base64 });

                         }
                     },

                     error: function (error) {
                         $("#img_medicamento").LoadingOverlay("hide");
                         $("#mensajeError").show();
                         $("#mensajeError").text("Error al mostrar la imagen");

                     },
                     beforeSend: function () {

                     },

                 });

            }

            $('#FormModal').modal('show');
        }


        $("#tablaMarca tbody").on("click", '.btn-editar', function () {

                filaseleccionada = $(this).closest('tr');

                var data = tablamarca.row(filaseleccionada).data();

                abirmodal(data)


            });

        $("#tablaMarca tbody").on("click", '.btn-eliminar', function () {

                var Medselecionado = $(this).closest('tr');


               var data = tablamarca.row(Medselecionado).data();

                swal({
                    title: "Estas seguro?",
                    text: "¿Desea eliminar este medicamento?",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonClass: "btn-primary",
                    confirmButtonText: "Si",
                    cancelButtonText: "No",
                    closeOnConfirm: true
                },
                    function () {

                        jQuery.ajax({

                            url: '@Url.Action("EliminarMedicamento", "Mantenimiento")',
                            type: "POST",
                            data: JSON.stringify({ id: data.MedicamentoID }),
                            dataType: "json",
                            contentType: "application/json; charset=utf-8",
                            success: function (data) {

                                if (data.resultado) {

                                    tablamarca.row(Medselecionado).remove().draw();
                                }
                                else {
                                    swal("No se pudo eliminar el medicamento", data.mensaje, "error");
                                }
                            },
                            error: function (error) {
                                console.log(error)
                            }
                        });
                    });




            });


            function guardar() {

                if (!$("#contenedor").valid()) {
                    $("#mensajeError").text("Por favor complete los campos requeridos");
                    $("#mensajeError").show();
                    return;
                }
                var imagenseleccionada = $("#fileMedicamento")[0].files[0];

                var Medicamento = {
                    MedicamentoID: parseInt($('#txtId').val()),
                    Nombre: $('#txtNombre').val(),
                    Descripcion: $('#txtDescripcion').val(),
                    oMarca: {
                        MarcaID: $("#cboMarca option:selected").val(),
                        Descripcion: $("#cboMarca option:selected").text()
                    },
                    oCategoria: {
                        CategoriaID: $("#cboCategoria option:selected").val(),
                        Descripcion: $("#cboCategoria option:selected").text()
                    },
                    Precio: parseFloat($("#txtPrecio").val()),
                    PrecioTexto: $("#txtPrecio").val(),
                    Stock: $("#txtstock").val(),
                    RequiereReceta: $("#cboReceta").val() == 1 ? true:false,
                    Activo: $("#cboActivo").val() == 1 ? true:false,

                };

                var request = new FormData();
                request.append("obj",JSON.stringify(Medicamento))
                request.append("imagen",imagenseleccionada)

                jQuery.ajax({
                    url: '@Url.Action("GuardarMedicamento", "Mantenimiento")',
                    type: "POST",
                    data: request,
                    processData: false,
                    contentType: false,
                    success: function (data) {

                        $(".modal-body").LoadingOverlay("hide");
                        //Medicamento nuevo

                        if (Medicamento.MedicamentoID == 0) {

                            if (data.idMedgenerado != 0) {
                                Medicamento.MedicamentoID = data.idMedgenerado;

                                $('#FormModal').modal('hide')
                                tablamarca.row.add(Medicamento).draw(false);

                            }
                            else {

                                $("#mensajeError").text(data.mensaje);
                                $("#mensajeError").show();
                            }

                        }
                        //Medicamento editar
                        else {

                            if (data.operacionExitosa) {

                                tablamarca.row(filaseleccionada).data(Medicamento).draw(false);
                                filaseleccionada = null;
                                $('#FormModal').modal('hide')
                                $('#mensajeError').hide();

                            }
                            else {

                                $("#mensajeError").text(data.mensaje);
                                $("#mensajeError").show();
                            }
                        }
                    },

                    error: function (error) {
                        $("#mensajeError").texte("Error Ajax");
                        $("#mensajeError").show();
                        $(".modal-body").LoadingOverlay("hide");
                    },

                    beforeSend: function () {

                        $(".modal-body").LoadingOverlay("show", {
                            imageResizeFactor: 2,
                            text: "Cargando ... ",
                            size: 14
                        })
                    },
                });
            }
    </script>
}



